<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.heavendevelopment.mantvida2018.Activity.VisualizarDevocional">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/activity_visualizar_devocional"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.heavendevelopment.mantvida2018.Activity.VisualizarDevocional">


        <TextView
            android:text="I reach out and you find me in the dust."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/tv_titulo_visualizar_devocional"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="22sp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Data de Criação : 29/11/2016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_data_criacao_visualizar_devocional"
            android:layout_below="@+id/tv_titulo_visualizar_devocional"
            android:layout_centerHorizontal="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view_visualizar_devocional"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_data_criacao_visualizar_devocional"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_visualizar_devocional"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:id="@+id/til_titulo_visualizar_devocional">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Título" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_titulo_visualizar_devocional"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/distance_between_til"
            android:id="@+id/til_textoChave_visualizar_devocional">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:hint="Texto Chave" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/til_textoChave_visualizar_devocional"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/distance_between_til"
            android:id="@+id/til_mensagemDeus_visualizar_devocional">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:hint="Mensagem de Deus para mim" />

        </android.support.design.widget.TextInputLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>