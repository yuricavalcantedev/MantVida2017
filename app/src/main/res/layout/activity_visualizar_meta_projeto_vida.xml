<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_visualizar_meta_projeto_vida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.heavendevelopment.mantvida2017.Activity.VisualizarMetaProjetoVida">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_ministerio_96px"
                android:id="@+id/img_categoria_visualizar_meta"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Ministério"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:id="@+id/tv_titulo_visualizar_meta"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_below="@+id/img_categoria_visualizar_meta"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Data de Criação : 29/11/2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_data_criacao_visualizar_meta"
                android:layout_below="@+id/tv_titulo_visualizar_meta"
                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view_visualizar_meta"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_data_criacao_visualizar_meta"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_visualizar_meta"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/distance_between_til"
                android:id="@+id/til_titulo_visualizar_meta">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Título" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_titulo_visualizar_meta"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/distance_between_til"
                android:id="@+id/til_como_visualizar_meta">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:hint="Como" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_between_til"
                android:id="@+id/til_objetivo_visualizar_meta"
                android:layout_below="@+id/til_como_visualizar_meta"
                android:layout_alignParentStart="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    android:hint="Objetivo" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_objetivo_visualizar_meta"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/distance_between_til"
                android:id="@+id/til_dataInicio_visualizar_meta">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data Início" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/til_dataInicio_visualizar_meta"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/distance_between_til"
                android:id="@+id/til_dataConclusao_visualizar_meta">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data Conclusão" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
