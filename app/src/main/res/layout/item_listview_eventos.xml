<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:id="@+id/tv_item_nome_evento"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_nome_evento"
        android:layout_alignStart="@+id/tv_item_nome_evento"
        android:layout_marginTop="9dp"
        android:id="@+id/tv_item_data_evento" />

    <TextView
        android:id="@+id/tv_item_estado_evento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_item_data_evento"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_id_evento"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/tv_item_nome_evento"
        android:layout_alignBottom="@+id/tv_item_nome_evento"
        android:layout_alignStart="@+id/tv_item_estado_evento" />
</RelativeLayout>