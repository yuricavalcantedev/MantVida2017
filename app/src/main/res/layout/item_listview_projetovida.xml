<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_financas_48px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/img_item_projetovida_categoria"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ganhar minha professora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_item_projetovida_categoria"
        android:layout_toEndOf="@+id/img_item_projetovida_categoria"
        android:layout_marginStart="10dp"
        android:id="@+id/tv_item_projetovida_titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:text="12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_item_projetovida_dataConclusao"
        android:layout_alignEnd="@+id/tv_item_projetovida_titulo"
        android:id="@+id/tv_item_projetovida_idMeta"
        android:visibility="invisible" />

    <TextView
        android:text="22/12/16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_projetovida_titulo"
        android:id="@+id/tv_item_projetovida_dataConclusao"
        android:layout_alignBottom="@+id/img_item_projetovida_categoria"
        android:layout_alignStart="@+id/tv_item_projetovida_titulo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/tv_item_projetovida_idMeta"
        android:layout_alignStart="@+id/tv_item_projetovida_dataConclusao" />

</RelativeLayout>